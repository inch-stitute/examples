{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "compile and run C",
      "type": "shell",
      "command": "gcc -Wall -pedantic -Werror ${file} -o build/${fileBasenameNoExtension}  && ./build/${fileBasenameNoExtension} ",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "group": "build"
    },
    {
      "type": "cppbuild",
      "label": "C/C++: gcc générer le fichier actif",
      "command": "/usr/bin/gcc",
      "args": [
        "-Wall",
        "-Werror",
        "-pedantic",
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/build/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Tâche générée par le débogueur."
    }
  ]
}
